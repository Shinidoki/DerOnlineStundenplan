<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="eit42.der_onlinestundenplan.TimeTableActivity">


    <include android:id="@+id/app_bar" layout="@layout/app_bar"></include>


    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:id="@+id/weekLineLayout"
            android:layout_marginTop="70dp"
            android:orientation="horizontal"
            android:layout_weight="30">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lastWeekButton"
                android:layout_gravity="left"
                android:layout_weight="25"
                android:layout_marginLeft="25dp"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ic_menu_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/weekText"
                android:layout_weight="50"
                android:text="Woche"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="@color/black"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextWeekButton"
                android:layout_gravity="right"
                android:layout_weight="25"
                android:layout_marginRight="25dp"
                android:background="@color/colorPrimaryDark"
                android:src="@drawable/ic_menu_forward"/>
        </LinearLayout>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timeTableFragment"
            android:name="eit42.der_onlinestundenplan.TimeTableFragment"
            tools:layout="@layout/fragment_time_table"
            android:layout_weight="70" />

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
